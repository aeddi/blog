# http://editorconfig.org

# this file is the top-most editorconfig file
root = true

# all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# markdown files
[*.md]
trim_trailing_whitespace = false

# json/yaml
[*.{js,json,yml,yaml}]
indent_size = 2

# configuration files
[*.toml]
indent_size = 2

# web files
[*.{html,css,scss,js}]
indent_size = 2

# ignored files
[{*-LICENSE,{resources/_gen,public}/**}]
charset = none
end_of_line = none
insert_final_newline = none
trim_trailing_whitespace = none
indent_style = none
indent_size = none
